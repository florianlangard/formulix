{% extends 'back/base_back.html.twig' %}
{% block active_users %}{% endblock %}
{% block active_events %}active{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Qualifying Date</th>
                <td>{{ event.qualifyingDate ? event.qualifyingDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Round</th>
                <td>{{ event.round }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>{{ event.season }}</td>
            </tr>
            <tr>
                <th>Circuit_name</th>
                <td>{{ event.circuitName }}</td>
            </tr>
            <tr>
                <th>Locality</th>
                <td>{{ event.locality }}</td>
            </tr>
            <tr>
                <th>Country Code</th>
                <td>{{ event.countryCode }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ event.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_event_index') }}">back to list</a>

    <a href="{{ path('back_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('back/event/_delete_form.html.twig') }}
{% endblock %}
